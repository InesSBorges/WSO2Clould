<?xml version="1.0" encoding="UTF-8"?>
<sequence name="seq_language" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <filter regex="true" source="string-length(//*[local-name() = 'id']) > 0 or string-length(//*[local-name() = 'code']) > 0 or string-length($ctx:idLanguage) > 0" xmlns:ns="http://org.apache.synapse/xsd">
        <then>
            <filter regex="true" source="string-length(//*[local-name() = 'id']) > 0">
                <then>
                    <property expression="//*[local-name() = 'id']" name="idLanguage" scope="default" type="STRING"/>
                </then>
                <else/>
            </filter>
            <filter regex="true" source="string-length(//*[local-name() = 'code']) > 0">
                <then>
                    <property expression="//*[local-name() = 'code']" name="languageCode" scope="default" type="STRING"/>
                </then>
                <else/>
            </filter>
            <dblookup>
                <connection>
                    <pool>
                        <dsName>ds_sqlserver_ReaderSustIMS30</dsName>
                    </pool>
                </connection>
                <statement>
                    <sql><![CDATA[
                    SELECT * FROM ADM.Language WITH(NOLOCK)
                    WHERE IdLanguage = ISNULL(?, IdLanguage)
                    AND LanguageCode = ISNULL(?, LanguageCode)
                    ]]></sql>
                    <parameter expression="$ctx:idLanguage" type="INTEGER"/>
                    <parameter expression="$ctx:languageCode" type="VARCHAR"/>
                    <result column="LastUpdatedDate" name="LastUpdatedDate"/>
                    <result column="LanguageCode" name="LanguageCode"/>
                    <result column="CreationDate" name="CreationDate"/>
                    <result column="Active" name="Active"/>
                    <result column="Description" name="Description"/>
                    <result column="IdLanguage" name="IdLanguage"/>
                    <result column="LastUpdatedUser" name="LastUpdatedUser"/>
                    <result column="CreationUser" name="CreationUser"/>
                </statement>
            </dblookup>
            <filter regex="true" source="$ctx:IdLanguage >= 1">
                <then>
                    <property expression="$ctx:IdLanguage" name="validIdLanguage" scope="default" type="INTEGER"/>
                </then>
                <else>
                    <propertyGroup>
                        <property name="validMessage" scope="default" type="STRING" value="OK"/>
                        <property name="validStatus" scope="default" type="STRING" value="202"/>
                        <property name="validResultCode" scope="default" type="STRING" value="SustIMS0100"/>
                    </propertyGroup>
                    <sequence key="seq_messageOutput"/>
                    <sequence key="seq_resultOutput"/>
                </else>
            </filter>
        </then>
        <else>
            <propertyGroup>
                <property name="validResultCode" scope="default" type="STRING" value="SustIMS0100"/>
                <property name="validMessage" scope="default" type="STRING" value="OK"/>
                <property name="validStatus" scope="default" type="STRING" value="202"/>
            </propertyGroup>
            <sequence key="seq_messageOutput"/>
            <sequence key="seq_resultOutput"/>
        </else>
    </filter>
</sequence>
